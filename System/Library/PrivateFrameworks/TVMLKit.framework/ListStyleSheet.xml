    <listTemplate>
       <banner class="banner">
            <background />
            <title class="bannerTitle" />
        </banner>

        <relatedContent>
            <lockup class="rcLockup">
                <img class="rcImg"/>
                <title class="rcLockupTitle" />
                <subtitle class="rcLockupSubtitle" />
                <description class="rcDescription" />
            </lockup>
            <activityIndicator class="rcActivity">
                <title class="rcActivityTitle"/>
            </activityIndicator>
            <heroImg class="heroImg" />
            <itemBanner class="itemBanner">
                <img class="heroImg"/>
				<heroImg class="heroImg"/>
                <row class="itemBannerRow">
                    <buttonLockup class="baseButtonLockup">
                        <img />
                        <badge class="baseButtonLockupBadge"/>
                        <seasonBadge class="baseButtonLockupSeasonBadge" />
                        <text class="baseButtonLockupText"/>
                        <title class="baseButtonLockupTitle"/>
                    </buttonLockup>
                </row>
            </itemBanner>
        </relatedContent>

        <list class="list">
            <header class="listHeader">
                <title class="listHeaderTitle"/>
                <subtitle class="listHeaderSubtitle"/>
                <text class="listHeaderText" />
                <row class="listHeaderRow">
                    <text class="listHeaderText" />
                </row>
            </header>

            <segmentBarHeader class="listSegmentBarHeader">
                <title class="segmentBarTitle"/>
                <subtitle class="segmentBarSubtitle"/>

                <segmentBar class="segmentBar">
                    <segmentBarItem>
                        <title class="segmentBarItemTitle"/>
                    </segmentBarItem>
                </segmentBar>
            </segmentBarHeader>

            <tumblerBar class="tumblerBar">
                <tumblerItem class="tumblerItem">
                    <title class="tumblerItemTitle" />
                    <subtitle class="tumblerItemSubtitle" />
                </tumblerItem>
            </tumblerBar>

            <section>
                <header class="listSectionHeader">
                    <title class="listSectionHeaderTitle" />
                </header>

                <listItemLockup class="listItemLockup">
                    <img class="lilImg" />
                    <ordinal class="lilOrdinal" />
                    <title class="lilTitle"/>
                    <subtitle class="lilSubtitle" />
                    <decorationImage class="lilDecorationImage" />
                    <decorationLabel class="lilDecorationLabel" />
                </listItemLockup>
                <description class="listDescription" />
				<button class="listButton"/>
            </section>
        </list>
    </listTemplate>
