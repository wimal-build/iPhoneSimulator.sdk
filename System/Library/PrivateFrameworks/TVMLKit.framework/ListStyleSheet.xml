<?xml version="1.0" encoding="UTF-8"?>
<document>
    <head>
        <style>
            .banner {
                padding: 49 90 27;
            }
            .bannerTitle {
                tv-text-style: title2;
                color: rgb(0, 0, 0);
                tv-position: center;
                tv-align: center;
            }

            .list {
                padding: 50 0 60;
                tv-interitem-spacing: 16;
            }
            .listHeader {
                margin: 49 0 0;
            }
            .listHeaderTitle {
                tv-text-style: title2;
                color: rgb(0, 0, 0);
                tv-position: center;
                text-align: center;
                tv-minimum-scale-factor: 0.6;
            }
            .listHeaderSubtitle {
                tv-text-style: headline;
                color: rgb(0, 0, 0);
                tv-position: center;
                text-align: center;
            }
            .listHeaderText {
                tv-text-style: body;
                color: rgb(0, 0, 0);
                tv-position: center;
                text-align: center;
            }
            .listHeaderRow {
                tv-interitem-spacing: 18;
                margin: 23 0 0;
            }

            .listSectionHeader {
                margin:43 20 13;
            }
            .listSectionHeaderTitle {
                tv-text-style: subtitle2;
                color: rgba(0, 0, 0, 0.4);
                tv-position: center;
                tv-align:left;
                text-align: natural;
            }

            .listItemLockup {
                tv-highlight-color:rgba(255, 255, 255, 0.8);
            }
            .lilImg {
                tv-position:left;
            }
            .lilOrdinal {
                tv-text-style: headline;
                tv-position: top-left;
                color: rgba(0, 0, 0, 0.3);
                text-align: center;
                tv-text-max-lines: 1;
            }
            .lilTitle {
                tv-text-style: headline;
                color: rgb(0, 0, 0);
                text-align: natural;
                tv-text-max-lines: 1;
                tv-position:center;
                tv-align: left;
                margin:0 20;
            }
            .lilSubtitle {
                tv-text-style: subtitle1;
                color: rgba(0, 0, 0, 0.6);
                text-align: natural;
                tv-text-max-lines: 1;
                tv-position:center;
                tv-align: left;
                margin:0 20;
            }
            .lilDecorationLabel {
                tv-text-style: subtitle1;
                color: rgba(0, 0, 0, 0.4);
                text-align: natural;
                tv-text-max-lines: 1;
                tv-position:right;
                margin:0 20 0 0;
            }
            .lilDecorationImage {
                tv-position:right;
                margin:0 20 0 0;
            }

            .listDescription {
                tv-text-style: body;
                color: rgb(0, 0, 0);
                background-color: rgba(255, 255, 255, 0.25);
                text-align: natural;
                tv-text-max-lines: 2;
                padding: 0 20;
                margin: -30 0 56;
            }
			.listButton {
				background-color: rgba(0, 0, 0, 0.2);
				tv-highlight-color: rgb(255, 255, 255);
			}
        </style>
    </head>
    
    <listTemplate>
        <banner class="banner">
            <title class="bannerTitle" />
        </banner>

        <list class="list">
            <header class="listHeader">
                <title class="listHeaderTitle"/>
                <subtitle class="listHeaderSubtitle"/>
                <text class="listHeaderText" />
                <row class="listHeaderRow">
                    <text class="listHeaderText" />
                </row>
            </header>

            <section>
                <header class="listSectionHeader">
                    <title class="listSectionHeaderTitle" />
                </header>

                <listItemLockup class="listItemLockup">
                    <img class="lilImg" />
                    <ordinal class="lilOrdinal" />
                    <title class="lilTitle"/>
                    <subtitle class="lilSubtitle" />
                    <decorationImage class="lilDecorationImage" />
                    <decorationLabel class="lilDecorationLabel" />
                </listItemLockup>
                <description class="listDescription" />
				<button class="listButton"/>
            </section>
        </list>
    </listTemplate>
</document>
